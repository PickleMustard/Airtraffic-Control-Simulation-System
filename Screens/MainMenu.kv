#:kivy 2.0.0

# MainMenu.kv
# Description:
#   Definition of the GUI for the main menu

<MainMenuWindow>:
    name: "MainMenu"

    GridLayout:
        cols: 3
        rows: 3

        Button:
            text: "Schedule"

            on_release:
                app.root.current = "Schedule"
                root.manager.transition.direction = "left"

        Button:
            text: "Plane Info"

            on_release:
                app.root.current = "PlaneInfo"
                root.manager.transition.direction = "left"

        Button:
            text: "Terminal Simulation"

            on_release:
                app.root.current = "TerminalSimulation"
                root.manager.transition.direction = "left"

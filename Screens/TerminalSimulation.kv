#:kivy 2.0.0

# TerminalSimulation.kv
# Description:
#   Definition of the GUI for simulation of a terminal

<TerminalSimulatedPlane>:
    
    canvas: 
        # Color Only needed for testing. It shows the scaling of image relative to the root widget
        Color:
            rgba: 0, 0, 1, 1    # Blue
        Rotate:
            angle: root.animAngle
        Rectangle:
            pos: self.pos
            size: self.size

    size_hint: .1, .1
    animAngle: 0

    Image: 
        source: "./resources/images/GoogleAirplane.png"
        pos: root.pos
        size: root.height, root.height
        allow_stretch: "True"
        keep_ratio: "True"

<TerminalSimulationWindow>:
    name: "TerminalSimulation"

    FloatLayout:
        # Title
        BoxLayout:
            size_hint_y: None
            size_hint_x: None
            height: TerminalSimulationTitle.height
            width: TerminalSimulationTitle.width
            pos: 0, root.height-self.height # Align top-left

            Label:
                id: TerminalSimulationTitle
                text: "Terminal Simulation"
                font_size: sp(20)
                size: self.texture_size

        # TODO: Remove this button once animatyion is automated
        # Temporary button to trigger animation for testing
        Button:
            text: "Start animation"
            size_hint: .25,.25
            on_release:
                root.animate(1, 400, 400)
            pos: 100, 100
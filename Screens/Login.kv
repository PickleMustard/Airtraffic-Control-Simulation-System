#:kivy 2.0.0

# Login.kv
# Description:
#   Definition of the GUI of the login screen 

<LoginWindow>:
    name: "Login"
    userSubmit: User
    passwordSubmit: Password


    GridLayout:
        cols:1

        GridLayout:
            cols: 2

            Label:

                text: "Username: "

            TextInput:
                id: User
                multiline: False

            Label:
                text: "Password: "

            TextInput:
                id:Password
                multiline: False

        Label:
            text: root.textSubmit

        #pressing the button will call a function in the Screens.py file called onSubmit
        Button:
            text: "Submit"
            on_release: root.onSubmit()
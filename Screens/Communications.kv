#:kivy 2.0.0

# Communications.kv
#   Definition of the GUI for simulation of a communications

<ChannelLabel@Label>:
    text: ""
    size: self.texture_size
    font_size: dp(30)

<ChannelRow>
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    channel_text: ""

    size_hint_x: 1
    size_hint_y: None
    height: 100
    rows: 1
    cols: 2


    # Channel name
    ChannelLabel: 
        text: root.channel_text

    # Status "Light"
    Widget:
        canvas:
            Color:
                rgba: 0, .75, 0, 1
            RoundedRectangle:
                size: self.height/1.5, self.height/1.5
                pos: self.center_x-self.height/3, self.center_y-self.height/3
                radius: [400,]


<CommunicationsWindow>:
    name: "Communications"
    GridLayout:
        rows: 3

        # Title
        TopBarLayout:
            title_text: "Communications"

        # Column headers
        GridLayout: 
            canvas:
                Color:
                    rgba: 0.11372549, 0.11372549, 0.11372549, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            size_hint: 1, .07
            cols: 3
            spacing: dp(10)

            padding: dp(4)

            Label: 
                font_size: dp(20)
                text: "Channel"
                size: self.texture_size
            
            Label: 
                font_size: dp(20)
                text: "Status"
                size: self.texture_size

        # Channels
        GridLayout:
            cols: 1
            rows: 3
            spacing: dp(10)

            ChannelRow:
                channel_text: "1"

            ChannelRow:
                channel_text: "2"

            ChannelRow:
                channel_text: "3"